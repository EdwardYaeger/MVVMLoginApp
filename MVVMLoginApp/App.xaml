<Application x:Class="MVVMLoginApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:MVVMLoginApp.Converters"
             xmlns:views="clr-namespace:MVVMLoginApp.Views"
             xmlns:vm="clr-namespace:MVVMLoginApp.ViewModels"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <converters:StringToVisibilityConverter
            x:Key="StringToVisibility"/>

        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:DashboardViewModel}">
            <views:DashboardView/>
        </DataTemplate>

    </Application.Resources>
</Application>