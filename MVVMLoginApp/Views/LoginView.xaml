<UserControl x:Class="MVVMLoginApp.Views.LoginView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#1e1e2e">

        <!-- Centered Login Card -->
        <Border Width="360"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Background="#2a2a3e"
                CornerRadius="12"
                Padding="36,32">
            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Welcome Back"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="White"
                           Margin="0,0,0,6"/>
                <TextBlock Text="Sign in to continue"
                           Foreground="#888"
                           FontSize="13"
                           Margin="0,0,0,28"/>

                <!-- Username -->
                <TextBlock Text="Username"
                           Foreground="#aaa"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <TextBox
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                    Background="#1e1e2e"
                    Foreground="White"
                    BorderBrush="#444"
                    BorderThickness="1"
                    Padding="10,8"
                    FontSize="14"
                    Margin="0,0,0,16"/>

                <!-- Password -->
                <TextBlock Text="Password"
                           Foreground="#aaa"
                           FontSize="12"
                           Margin="0,0,0,6"/>
                <PasswordBox
                    x:Name="PasswordInput"
                    Background="#1e1e2e"
                    Foreground="White"
                    BorderBrush="#444"
                    BorderThickness="1"
                    Padding="10,8"
                    FontSize="14"
                    Margin="0,0,0,8"/>

                <!-- Error Message (only shows when ErrorMessage is not empty) -->
                <TextBlock
                    Text="{Binding ErrorMessage}"
                    Foreground="#ff6b6b"
                    FontSize="12"
                    TextWrapping="Wrap"
                    Margin="0,0,0,16"
                    Visibility="{Binding ErrorMessage,
                        Converter={StaticResource StringToVisibility}}"/>

                <!-- Login Button -->
                <Button
                    Content="Sign In"
                    Command="{Binding LoginCommand}"
                    Background="#3b82f6"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="0,12"
                    FontSize="15"
                    FontWeight="SemiBold"
                    Cursor="Hand"
                    Margin="0,8,0,0"/>

                <!-- Hint -->
                <TextBlock
                    Text="Hint: admin / password123"
                    Foreground="#555"
                    FontSize="11"
                    HorizontalAlignment="Center"
                    Margin="0,12,0,0"/>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>