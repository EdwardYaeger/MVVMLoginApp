<UserControl x:Class="MVVMLoginApp.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid Background="#1e1e2e">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Navigation Bar -->
        <Border Grid.Row="0"
                Background="#2a2a3e"
                Padding="24,0">
            <Grid>
                <TextBlock Text="MyApp Dashboard"
                           Foreground="White"
                           FontWeight="Bold"
                           FontSize="16"
                           VerticalAlignment="Center"/>
                <Button Content="Logout"
                        Command="{Binding LogoutCommand}"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Background="#ef4444"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="16,6"
                        FontWeight="SemiBold"
                        Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <TextBlock Text="{Binding WelcomeMessage}"
                       Foreground="White"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,12"/>

            <TextBlock
                Text="You've successfully logged in using MVVM!"
                Foreground="#888"
                FontSize="15"
                HorizontalAlignment="Center"
                Margin="0,0,0,32"/>

            <!-- Stats Row -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center">
                <Border Background="#2a2a3e"
                        CornerRadius="10"
                        Padding="24,20"
                        Margin="8"
                        Width="150">
                    <StackPanel>
                        <TextBlock Text="3"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#3b82f6"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="MVVM Layers"
                                   Foreground="#888"
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Background="#2a2a3e"
                        CornerRadius="10"
                        Padding="24,20"
                        Margin="8"
                        Width="150">
                    <StackPanel>
                        <TextBlock Text="0"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#10b981"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Code-Behind Lines"
                                   Foreground="#888"
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
                <Border Background="#2a2a3e"
                        CornerRadius="10"
                        Padding="24,20"
                        Margin="8"
                        Width="150">
                    <StackPanel>
                        <TextBlock Text="✓"
                                   FontSize="32"
                                   FontWeight="Bold"
                                   Foreground="#f59e0b"
                                   HorizontalAlignment="Center"/>
                        <TextBlock Text="Login Working"
                                   Foreground="#888"
                                   FontSize="12"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>